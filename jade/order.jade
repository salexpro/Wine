- var active = 'order'
mixin item(type)
    .large-3.column
        .order_item
            .order_item_type
                img(src="data:image/png;base64,", alt="Тип") 
                = type
            a.order_item_info(data-open="info")
                img(src="data:image/png;base64,", alt="Информация")
            img(src="/img/bottle.png", alt="Бутылка")
            .order_item_price
                | ЦІНА: 1399.50 грн
            a.button(href="/delivery.html")
                img(src="data:image/png;base64,", alt="")
                | Придбати
doctype html
html(lang="ru")
    include includes/head
    body
        main.wrap
            include includes/header
            section.content.order
                .row
                    .small-12.column.order_steps
                        .order_step.selected
                            | Оберіть що саме подарувати
                        .order_step
                            | Додайте відеоповідомлення
                        .order_step
                            | Оплата та відправка
                    p.small-12.column.header.primary
                        | Давай спочатку оберемо пляшку
                        a.help(data-open="how")
                            img(src="data:image/png;base64,", alt="")
                    .small-12.column.order_filter
                        select
                            option Вино
                            option Шампанське
                            option Віскі
                        .order_filter_label
                            | Тип
                        .order_filter_type
                            input(type="radio" name="type" value="1" id="type1")
                            label(for="type1") Біле
                        .order_filter_type
                            input(type="radio" name="type" value="2" id="type2" checked)
                            label(for="type2") Червоне
                        .order_filter_type
                            input(type="radio" name="type" value="3" id="type3")
                            label(for="type3") Рожеве
                    .row.small-12.column.order_items
                        +item('C')
                        +item('Н/C')
                        +item('C')
                        +item('C')
            include includes/footer
        script(src="/bower_components/jquery/dist/jquery.min.js")
        script(src="/bower_components/foundation-sites/dist/foundation.min.js")
        script(src="/js/app.min.js")