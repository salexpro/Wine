- var active = 'order'
mixin item(title)
    //- .small-12.medium-6.large-2.column
    .order_item
        //- .order_item_type
        //-     img(src="data:image/png;base64,", alt="Тип") 
        //-     = type
        a.order_item_title(href="#")
            = title
        img(src="/img/wine.jpg", alt="Бутылка")
        .order_item_price
            | цена: 230.00 грн
        a.order_item_select(href="/delivery.html")
            img(src="data:image/png;base64,", alt="")
            | выбрать
        a.order_item_info(data-open="info")
            img(src="data:image/png;base64,", alt="Информация")
doctype html
html(lang="ru")
    include includes/head
    body
        main.wrap.off-canvas-wrapper
            .off-canvas-wrapper-inner(data-off-canvas-wrapper)
                include includes/header
                section.content.order
                    .row
                        .small-12.column.order_steps
                            .order_step.selected
                                | Выберите напиток
                            .order_step
                                | Добавьте видеосообщение
                            .order_step
                                | Оформите заказ
                        p.small-12.column.header.primary
                            | Выбери напиток для подарка
                            a.help(data-open="how")
                                img(src="data:image/png;base64,", alt="")
                        .large-8.column.order_filter
                            select.select7(placeholder="Вино")
                                option 
                                option Красное
                                option Белое
                                option Розовое
                            select.select7(placeholder="Шампаское")
                                option ти
                                option Віскі
                            select.select7(placeholder="Виски")
                                option Виски
                                option Шампанське
                                option Віскі
                            select.select7(placeholder="Коньяк")
                                option Коньяк
                                option Шампанське
                                option Віскі    
                            //- .order_filter_label
                            //-     | Тип
                            //- .order_filter_type
                            //-     input(type="radio" name="type" value="1" id="type1")
                            //-     label(for="type1") Біле
                            //- .order_filter_type
                            //-     input(type="radio" name="type" value="2" id="type2" checked)
                            //-     label(for="type2") Червоне
                            //- .order_filter_type
                            //-     input(type="radio" name="type" value="3" id="type3")
                            //-     label(for="type3") Рожеве
                        .row.small-12.column.order_items
                            +item('Вино Orvieto Classico Ruffino 0.75 л')
                            +item('Вино Cape Red 0.75л')
                            +item('Вино Cotes du Rhone La Griveliere Pre Anselme 0.75л')
                            +item('Вино Wolf trap 0.75л')
                            +item('Вино Cape Red 0.75л')
                            +item('Вино Cape Red 0.75л')
                            +item('Вино Orvieto Classico Ruffino 0.75 л')
                            +item('Вино Cape Red 0.75л')
                            +item('Вино Cotes du Rhone La Griveliere Pre Anselme 0.75л')
                            +item('Вино Wolf trap 0.75л')
                            +item('Вино Cape Red 0.75л')
                            +item('Вино Cape Red 0.75л')
                include includes/footer